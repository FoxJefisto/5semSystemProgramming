void __fastcall TForm1::Button1Click(TObject *Sender)
{
	PB1->Canvas->Pen->Width = 1;
	PB1->Canvas->Brush->Color = clGreen;
	PB1->Canvas->Pen->Color = clGreen;
	TPoint p[] =
